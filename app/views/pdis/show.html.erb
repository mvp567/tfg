<h1>Pdis#show</h1>


<%= hidden_field_tag :accio, "mostrant" %>
		<%= hidden_field_tag :tipus, @pdi.type %>

	<div id="map-canvas"> </div>
	<%= hidden_field_tag @pdi.coord_lat, @pdi.coord_lat, {:id => 'coord_lat'} %>
	<%= hidden_field_tag @pdi.coord_lng, @pdi.coord_lng, {:id => 'coord_lng'} %>
	<!-- carregar etiquetes de l'associació -->
		<%= label_tag @pdi.punts %>

		<%= label_tag @pdi.nom %>	

		<%= label_tag @pdi.observacions %>	

		<%= label_tag @pdi.horari %>	

		<%= label_tag @pdi.telefon %>	
		
		<%= label_tag @pdi.web %>	
		<%= label_tag @pdi.preu_aprox %>	
		<%= label_tag @pdi.nivell_preu %>	

<h3> Camps localització </h3>
	
	
		<%= label_tag @pdi.adreca %>	
		<%= label_tag @pdi.codi_postal %>	
		<%= label_tag @pdi.localitat %>
		<%= label_tag @pdi.pais %>


<% if @pdi.type == "Restaurant" %>
	
		<%= label_tag @pdi.forquilles %>
		
<% end %>
	

	<% if @pdi.type == "Hotel" %>
	
		<%= label_tag @pdi.estrelles %>
		
<% end %>
	
<p>
	<h2>Rutes turístiques que inclouen aquest PDI</h2>
<ul>
<% @rts_from_pdi.each do |rtp| %>
  <li>
    <%#= rtp.nom %>
    <%= link_to rtp.nom, ruta_turistica_path(rtp) %>
  </li>
<% end %>
</ul>
</p>

<p>
	<h2>PDIs propers</h2>
<ul>
<% @pdis_propers.each do |pp| %>
  <li>
    <%# = pp.nom %>
    <%= link_to pp.nom, pdi_path(pp) %>
  </li>
<% end %>
</ul>
</p>

<p>
	<h2>Valoracions del PDI</h2>

<%= link_to "Nova valoració", {:controller => "valoracios", :action => "new", :pdi_id => @pdi.id}, :method => :get %>
<%= render 'valoracios/index' %>

</p>


