<h1>Iniciar sessi√≥</h1>

<%= form_tag sessions_path do %>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  <div class="form-group">
    <%= label_tag :nom_usuari, nil, class: 'sr-only titol_camp2' %>
    <%= text_field_tag :nom_usuari, params[:nom_usuari], class: 'form-control contingut_camp2', placeholder: 'Nom d\'usuari' %>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, class: 'sr-only titol_camp2' %>
    <%= password_field_tag :password, nil, class: 'form-control contingut_camp2', placeholder: 'Contrasenya' %>
  </div>
  <div><%= submit_tag "Entra", class: 'btn btn-default' %></div>
<% end %>