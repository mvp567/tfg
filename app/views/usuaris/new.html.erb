		<%= u.number_field :pais_naixament %>
	</div>

	<div>
		<%= u.label :ciutat_residencia %>	
		<%= u.number_field :ciutat_residencia %>
	</div>

	<div>
		<%= u.label :pais_residencia %>	
		<%= u.number_field :pais_residencia %>

	</div>

<% end %>

    